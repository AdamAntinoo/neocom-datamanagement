<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dialogBackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialogTitle"
        style="@style/Theme.EveDroid.DialogTitle"
        android:layout_margin="10dp"
        android:text="SCHEDULE MANUFACTURE JOB/S" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/dialogBackground"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/blueprintLabel"
            style="@style/Theme.EveDroid.DialogLabel"
            android:text="Blueprint selected:" />

        <TextView
            android:id="@+id/blueprintName"
            style="@style/Theme.EveDroid.DialogNonEditableText"
            android:layout_marginLeft="10dp"
            android:text="...Blueprint Name..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@color/dialogBackground"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/nojobsLabel"
            style="@style/Theme.EveDroid.DialogLabel"
            android:text="No of jobs:" />

        <Spinner
            android:id="@+id/jobnumberSpinner"
            style="@style/Theme.EveDroid.DialogSpinner"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:entries="@array/jobNumberEntries"
            android:prompt="@string/jobNumberSpinnerPrompt" />
    </LinearLayout>
</LinearLayout>