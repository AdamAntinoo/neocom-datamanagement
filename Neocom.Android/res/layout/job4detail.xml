<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blacktraslucent80" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/jobID"
            style="@style/NumberStyle"
            android:text="@string/default_bignumber" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/ownerName"
            style="@style/NameStyle"
            android:text="Adam Antinoo" />

        <TextView
            android:id="@+id/ownerNameLabel"
            style="@style/LabelStyle.Small"
            android:background="@drawable/topwhiteline"
            android:text="OWNER" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/jobLocation"
            style="@style/LocationStyle"
            android:layout_width="fill_parent"
            android:text="0.4 Hek - Boundless Station" />

        <TextView
            android:id="@+id/jobLocationLabel"
            style="@style/LabelStyle.Small"
            android:background="@drawable/topwhiteline"
            android:text="JOB STATION" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/jobQtys"
            style="@style/NumberStyle"
            android:text="19 / 24" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/jobCost"
            style="@style/NumberStyle"
            android:text="94,381 ISK" />

        <LinearLayout
            android:id="@+id/jobTimingBlock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jobLocation"
            android:orientation="horizontal" >

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/jobStart"
                style="@style/NumberStyle"
                android:layout_width="150dp"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="2014.12.05 23:32:56" />

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/jobEnd"
                style="@style/NumberStyle"
                android:layout_marginRight="8dp"
                android:gravity="left"
                android:text="2014.12.06 09:32:56" />

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/jobDuration"
                style="@style/NumberStyle"
                android:layout_width="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="0d 9:00:37" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jobTimingBlockLabels"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jobTimingBlock"
            android:background="@drawable/topwhiteline" >

            <TextView
                android:id="@+id/jobStartLabel"
                style="@style/LabelStyle.Small"
                android:layout_width="150dp"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:text="START" />

            <TextView
                android:id="@+id/jobEndLabel"
                style="@style/LabelStyle.Small"
                android:layout_width="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="left"
                android:text="END" />

            <TextView
                android:id="@+id/jobDurationLabel"
                style="@style/LabelStyle.Small"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="DURATION" />
        </LinearLayout>

        <ImageView
            android:id="@+id/rightArrow"
            style="@style/RightArrow"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>