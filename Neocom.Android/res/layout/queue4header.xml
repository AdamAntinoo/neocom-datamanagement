<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jobQueueBlock"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:background="@drawable/blacktraslucent40" >

    <ImageView
        android:id="@+id/activityIcon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:src="@drawable/manufacturing" />

    <TextView
        android:id="@+id/queueLabel"
        style="@style/LabelStyle"
        android:layout_width="12dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/activityIcon"
        android:text="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/timingBlock"
        android:layout_toRightOf="@+id/queueLabel"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/queueProgressBar"
            style="@style/Widget.ProgressBar.Queue"
            android:layout_width="fill_parent"
            android:layout_height="16px"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:max="32"
            android:progress="8"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/hoursLabelBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nowLabel"
                style="@style/LabelStyle.Small"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:text="NOW"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/l12Label"
                style="@style/LabelStyle.Small"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="24"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/l36Label"
                style="@style/LabelStyle.Small"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"
                android:gravity="right"
                android:text="48"
                android:textSize="6sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/timingBlock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/nextLabel"
            style="@style/LabelStyle.Small"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bottomwhiteline"
            android:gravity="left"
            android:text="NEXT"
            android:visibility="visible" />

        <TextView
            android:id="@+id/timeLabel"
            style="@style/LabelStyle.Small"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bottomwhiteline"
            android:gravity="right"
            android:text="TIME"
            android:visibility="visible" />

        <TextView
            android:id="@+id/finishTime"
            style="@style/TimeStyle.Small"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/nextLabel"
            android:gravity="left"
            android:text="10 08:34"
            android:textSize="8sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/time2Go"
            style="@style/TimeStyle.Small"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/timeLabel"
            android:gravity="right"
            android:text="02:08:34"
            android:textSize="8sp"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>