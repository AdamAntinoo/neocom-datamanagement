<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiningSessionActivity" >

    <ImageView
        android:id="@+id/backgroundFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/redshadebackground" />

    <LinearLayout
        android:id="@+id/miningSessionPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/miningsession_4header" />

        <TextView
            android:id="@+id/labelAsteroids"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottomwhiteline"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="COLLECTED ASTEROIDS"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:indeterminateDrawable="@drawable/progressspinner"
            android:visibility="visible" >
        </ProgressBar>

        <ListView
            android:id="@+id/fragmentList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:dividerHeight="2dp"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>