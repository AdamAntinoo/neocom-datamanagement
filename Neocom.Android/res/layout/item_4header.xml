<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/twoColumns"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="@dimen/pilotavatarsize"
        android:layout_height="@dimen/pilotavatarsize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:contentDescription="Item Icon"
        android:src="@drawable/defaultitemicon" />

    <LinearLayout
        android:id="@+id/itemInformationBlock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/itemIcon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/itemName"
            style="@style/AppTheme.ItemNameStyle"
            android:text="Tritanium" />

        <TextView
            android:id="@+id/itemGroupCategory"
            style="@style/AppTheme.ItemNameStyle"
            android:text="Mineral/Asteroid"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:id="@+id/bestSell"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bestSellPrice"
                style="@style/AppTheme.sellPriceStyle"
                android:drawableLeft="@drawable/ic_sell"
                android:drawablePadding="5dp"
                android:paddingRight="5dp"
                android:text="6.21 ISK" />

            <TextView
                android:id="@+id/bestSellLocation"
                style="@style/locationStationStyle"
                android:text="0.5 Hek - Boundles Station"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bestBuy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bestBuyPrice"
                style="@style/PriceStyle.Seller"
                android:text="4.50 ISK" />

            <TextView
                android:id="@+id/bestBuyLocation"
                style="@style/locationStationStyle"
                android:text="0.5 Hek - Boundless Station"
                android:textSize="11sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/manufactureDataBlock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/manufactureCost"
                style="@style/PriceStyle.Cost"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/moduleQualityBlock"
                android:text="4.50 ISK"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/moduleQualityBlock"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bottomwhiteline"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/moduleIndex"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="010"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/moduleMultiplier"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="x4"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qualityLabelsBlock"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/moduleQualityBlock"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/indexLabel"
                    style="@style/AppTheme.LabelStyle"
                    android:layout_alignParentLeft="true"
                    android:text="INDEX" />

                <TextView
                    android:id="@+id/multiplierLabel"
                    style="@style/AppTheme.LabelStyle"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="MULT." />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>