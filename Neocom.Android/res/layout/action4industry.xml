<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blacktraslucent40" >

    <ImageView
        android:id="@+id/rightArrow"
        style="@style/RightArrow" />

    <LinearLayout
        android:id="@+id/itemIconBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/itemIcon"
            style="@style/ItemIconStyle.Size32"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/noresourceframe"
            android:src="@drawable/donothave" />

        <ProgressBar
            android:id="@+id/qtyRequiredProgress"
            style="@style/Widget.ProgressBar.Vertical"
            android:layout_width="6dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp" />
    </LinearLayout>

    <org.dimensinfin.evedroid.core.Din1451BoldTextView
        android:id="@+id/itemName"
        style="@style/NameStyle"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rightArrow"
        android:layout_toRightOf="@+id/itemIconBlock"
        android:text="@string/default_itemname" />

    <org.dimensinfin.evedroid.core.DaysTextView
        android:id="@+id/qtyRequired"
        style="@style/NumberStyle.XL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_toLeftOf="@+id/rightArrow"
        android:layout_toRightOf="@+id/itemIconBlock"
        android:text="19 / 24"
        android:visibility="visible" />

    <org.dimensinfin.evedroid.core.DaysTextView
        android:id="@+id/moduleAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rightArrow"
        android:background="@drawable/blueroundedbox"
        android:ellipsize="marquee"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:text="BUILD"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/functionLabel"
        style="@style/AppTheme.LabelStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/moduleAction"
        android:layout_toLeftOf="@+id/qtyBlock"
        android:text="PREFERENCE ACTION"
        android:visibility="gone" />

</RelativeLayout>