<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/greentraslucent20" >

    <ImageView
        android:id="@+id/rightArrow"
        style="@style/RightArrow"
        android:layout_gravity="right"
        android:gravity="right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/groupIcon"
        style="@style/ItemIconStyle.Size24"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:src="@drawable/jobdirector" />

    <org.dimensinfin.evedroid.core.DaysTextView
        android:id="@+id/title"
        style="@style/NameStyle.White"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/groupIcon"
        android:text="QUEUES IN USE"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/manufactureBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/manufactureIcon"
            style="@style/ItemIconStyle.Size24"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:src="@drawable/manufacturing" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/manufactureQueues"
            style="@style/NumberStyle.Big"
            android:layout_gravity="center_vertical"
            android:text="1/2"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/inventionBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/inventionIcon"
            style="@style/ItemIconStyle.Size24"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:src="@drawable/invention" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/inventionQueues"
            style="@style/NumberStyle.Big"
            android:layout_gravity="center_vertical"
            android:text="0/1"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>