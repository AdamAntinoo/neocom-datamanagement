<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80700000"
    android:cacheColorHint="#00000000" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rightArrow" >

        <ImageView
            android:id="@+id/assetIcon"
            style="@style/ItemIconStyle.Size48" />

        <TextView
            android:id="@+id/assetName"
            style="@style/EIA.ThemedName"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/qtyBlock"
            android:layout_toRightOf="@+id/assetIcon"
            android:singleLine="true"
            android:text="@string/default_bponame" />

        <TextView
            android:id="@+id/containerCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assetName"
            android:layout_toLeftOf="@+id/qtyBlock"
            android:layout_toRightOf="@+id/assetIcon"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Mineral - Asteroid"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/titleLabel"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:text="CONTAINER"
            android:textColor="@android:color/white"
            android:textSize="9sp" />

        <LinearLayout
            android:id="@+id/qtyBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/titleLabel"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/default_smallnumber"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/countLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/topwhiteline"
                android:ellipsize="marquee"
                android:gravity="right"
                android:singleLine="true"
                android:text="NO. STACKS INSIDE"
                android:textColor="@android:color/white"
                android:textSize="7sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/imageview_defaultcontent"
        android:padding="-4dp"
        android:src="@drawable/arrowleft"
        android:visibility="visible" />

</RelativeLayout>