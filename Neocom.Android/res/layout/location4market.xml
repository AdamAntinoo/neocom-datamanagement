<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blacktraslucent40" >

    <ImageView
        android:id="@+id/rightArrow"
        style="@style/RightArrow"
        android:layout_gravity="right"
        android:gravity="right"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/groupIcon"
            style="@style/ItemIconStyle.Size24"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/markethub" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/title"
            style="@style/NameStyle.White"
            android:layout_gravity="center_vertical"
            android:text="Titulo"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rightArrow"
        android:minHeight="5dp"
        android:orientation="horizontal" >

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/count"
            style="@style/NumberStyle.Big"
            android:layout_gravity="center_vertical"
            android:text="7"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>