<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/blacktraslucent40" >

    <ImageView
        android:id="@+id/itemIcon"
        style="@style/ItemIconStyle.Size48"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/blacktraslucent40"
        android:src="@drawable/markethub" />

    <LinearLayout
        android:id="@+id/jobBodyBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/itemIcon"
        android:orientation="vertical" >

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/dialogTitle"
            style="@style/Dialog.Title"
            android:layout_width="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="BUY REQUEST" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/itemName"
            style="@style/NameStyle"
            android:layout_marginRight="5dp"
            android:singleLine="false"
            android:text="Nanofiber Internal Structure II Blueprint" />

        <LinearLayout
            android:id="@+id/requestBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/qtyRequestedlabel"
                style="@style/Dialog.Label"
                android:layout_width="120dp"
                android:layout_alignBaseline="@+id/runsCount"
                android:text="QTY. REQUESTED:" />

            <EditText
                android:id="@+id/qtyRequested"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:hint="10"
                android:inputType="number"
                android:maxEms="10"
                android:selectAllOnFocus="true"
                android:textColorLink="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoBlock01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/prieclabel"
                style="@style/Dialog.Label"
                android:layout_width="120dp"
                android:text="PRICE:" />

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/price"
                style="@style/Dialog.Data"
                android:text="123,456.89 ISK" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoBlock02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/budgetLabel"
                style="@style/Dialog.Label"
                android:layout_width="120dp"
                android:text="BUDGET:" />

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/budget"
                style="@style/Dialog.Data"
                android:text="7d 14:24" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobBodyBlock"
        android:layout_margin="5dp"
        android:text=""
        android:visibility="gone" />

</RelativeLayout>