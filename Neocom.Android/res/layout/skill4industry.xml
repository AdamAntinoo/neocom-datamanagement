<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blacktraslucent40" >

    <ImageView
        android:id="@+id/rightArrow"
        style="@style/RightArrow"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/itemIconBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/itemIcon"
            style="@style/ItemIconStyle.Size32"
            android:layout_marginTop="1dp"
            android:background="@drawable/noresourceframe"
            android:src="@drawable/levelpartiallytrained" />

        <ProgressBar
            android:id="@+id/qtyRequiredProgress"
            style="@style/Widget.ProgressBar.Vertical"
            android:layout_width="6dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:visibility="gone" />
    </LinearLayout>

    <org.dimensinfin.evedroid.core.DaysTextView
        android:id="@+id/itemName"
        style="@style/NameStyle.Orange"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rightArrow"
        android:layout_toRightOf="@+id/itemIconBlock"
        android:text="@string/default_itemname"
        android:textColor="@android:color/white" />

    <org.dimensinfin.evedroid.core.DaysTextView
        android:id="@+id/qtyRequired"
        style="@style/NumberStyle.Big"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/rightArrow"
        android:layout_toRightOf="@+id/itemIconBlock"
        android:text="Level II"
        android:textSize="15sp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/skillLevelsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/qtyRequired"
        android:background="@drawable/whiteborderbox"
        android:orientation="horizontal"
        android:padding="1dp" >

        <ImageView
            android:id="@+id/skillLevel1"
            style="@style/SkillBlock"
            android:layout_marginLeft="1dp"
            android:background="@drawable/skillcompleted"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/skillLevel2"
            style="@style/SkillBlock"
            android:background="@drawable/skillcompleted"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/skillLevel3"
            style="@style/SkillBlock"
            android:background="@drawable/skilltraining"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/skillLevel4"
            style="@style/SkillBlock"
            android:background="@drawable/skillpending"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/skillLevel5"
            style="@style/SkillBlock"
            android:background="@drawable/skillempty"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>