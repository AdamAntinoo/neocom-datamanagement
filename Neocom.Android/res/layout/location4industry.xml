<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/redtraslucent20" >

    <ImageView
        android:id="@+id/rightArrow"
        style="@style/RightArrow" />

    <ImageView
        android:id="@+id/itemIcon"
        style="@style/ItemIconStyle" />

    <org.dimensinfin.evedroid.core.Din1451BoldTextView
        android:id="@+id/locationRegion"
        style="@style/NameStyle.Orange"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="Tash-Murkon" />

    <RelativeLayout
        android:id="@+id/systemBlock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rightArrow"
        android:layout_toRightOf="@+id/itemIcon" >

        <org.dimensinfin.evedroid.core.Din1451BoldTextView
            android:id="@+id/locationSystem"
            style="@style/NameStyle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Tash-Murkon - Moon 22" />

        <TextView
            android:id="@+id/classLabel"
            style="@style/LabelStyle.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/titleLabel"
            android:singleLine="true"
            android:text="REGION"
            android:textSize="9sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/stationBlock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/locationSystem" >

            <org.dimensinfin.evedroid.core.Din1451TextView
                android:id="@+id/locationStation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/childCount"
                android:ellipsize="marquee"
                android:singleLine="false"
                android:text="Pimebeka VIII - Moon 9 - CBC Corporation"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/childCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:minWidth="30dp"
                android:text="32 stacks"
                android:textColor="@android:color/white"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>

    <org.dimensinfin.evedroid.core.DaysTextView
        android:id="@+id/roles"
        style="@style/LocationStyle.Role"
        android:layout_below="@+id/systemBlock"
        android:layout_toLeftOf="@+id/rolesLabel"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="MANUFACTURE"
        android:visibility="visible" />

    <TextView
        android:id="@+id/rolesLabel"
        android:layout_width="wrap_content"
        style="@style/LabelStyle.Small"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@+id/rightArrow"
        android:layout_below="@+id/systemBlock"
        android:gravity="right"
        android:text="ROLES" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roles"
        layout="@layout/block_container" />

</RelativeLayout>