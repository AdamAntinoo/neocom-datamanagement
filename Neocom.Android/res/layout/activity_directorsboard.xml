<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/genericFragmentBody"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/neoMenuIcon"
            style="@style/NeoComIconStyle"
            android:layout_width="@dimen/menuIconWidth"
            android:layout_height="@dimen/menuIconHeight"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/neomenu" />
    </LinearLayout>

    <include
        android:id="@+id/progressLayout"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        layout="@layout/actionbar_indeterminateprogress"
        android:padding="2dp"
        android:visibility="visible" />

    <ListView
        android:id="@+id/listContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:dividerHeight="1dp"
        android:visibility="gone" />

</LinearLayout>