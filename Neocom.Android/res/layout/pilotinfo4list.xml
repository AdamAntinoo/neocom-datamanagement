<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectedgreentraslucent" >

    <ImageView
        android:id="@+id/pilotAvatar"
        android:layout_width="@dimen/pilotavatarsize"
        android:layout_height="@dimen/pilotavatarsize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:contentDescription="Item Icon"
        android:src="@drawable/nopilot" />

    <LinearLayout
        android:id="@+id/pilotInformationBlock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pilotAvatar"
        android:orientation="vertical" >

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/pilotName"
            style="@style/NameStyle.Orange"
            android:text="Adam Antinoo" />

        <TextView
            android:id="@+id/lastKnownLocation"
            style="@style/Theme.EveDroidRubicon.LocationStyle"
            android:text=">>> Goni VII - Transtellar Shipping &lt;&lt;&lt;" />

        <TextView
            android:id="@+id/lastKnownLocationLabel"
            style="@style/AppTheme.LabelUpLineStyle"
            android:layout_width="fill_parent"
            android:background="@drawable/topwhiteline"
            android:text="LAST KNOWN LOCATION" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/accountBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="123,345,556.98 ISK"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/accountBalanceLabel"
            style="@style/AppTheme.LabelUpLineStyle"
            android:gravity="left"
            android:text="BALANCE" />

        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/assetsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="125 items"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/assetsCountLabel"
            style="@style/AppTheme.LabelUpLineStyle"
            android:text="ASSET COUNT" />
    </LinearLayout>

</RelativeLayout>