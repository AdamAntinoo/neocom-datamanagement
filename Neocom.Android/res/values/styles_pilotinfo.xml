<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NameStyle.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NameStyle.Orange" state="deprecated">
        <item name="android:textColor">@color/greenGlowText</item>
    </style>

    <style name="NameStyle.Green" state="deprecated">
        <item name="android:textColor">@color/greenName</item>
    </style>

    <style name="NameStyle.Red" state="deprecated">
        <item name="android:textColor">@color/redName</item>
    </style>

    <style name="NumberStyle.Green">
        <item name="android:textColor">@color/greenName</item>
    </style>

    <style name="NumberStyle.Red">
        <item name="android:textColor">@color/redName</item>
    </style>

    <style name="NumberStyle.Green.Big">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NumberStyle.Red.Big">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NumberStyle.Small">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="NumberStyle.Green.Small">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="NumberStyle.Red.Small">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="PilotName" parent="NameStyle.Orange"></style>

    <style name="NeoComLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NeoComIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#FF202020</item>
    </style>

    <style name="LabelStyle.Small.NeoComLabel">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

</resources>