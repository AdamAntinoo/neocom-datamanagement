<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemIcon">
        <item name="android:layout_width">@dimen/itemIcon48</item>
        <item name="android:layout_height">@dimen/itemIcon48</item>
        <item name="android:contentDescription">@string/imageview_defaultcontent</item>
        <item name="android:src">@drawable/defaultitemicon</item>
    </style>

    <style name="ItemIcon.Style">
        <item name="android:layout_width">@dimen/itemIcon48</item>
        <item name="android:layout_height">@dimen/itemIcon48</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">2px</item>
    </style>

    <style name="ItemIcon.Style.Size96" parent="ItemIcon.Style">
        <item name="android:layout_width">@dimen/itemIcon96</item>
        <item name="android:layout_height">@dimen/itemIcon96</item>
    </style>

    <style name="ItemIcon.Style.Size64" parent="ItemIcon.Style">
        <item name="android:layout_width">@dimen/itemIcon64</item>
        <item name="android:layout_height">@dimen/itemIcon64</item>
    </style>

    <style name="ItemIcon.Style.Size48" parent="ItemIcon.Style">
        <item name="android:layout_width">@dimen/itemIcon48</item>
        <item name="android:layout_height">@dimen/itemIcon48</item>
    </style>

    <style name="ItemIcon.Style.Size40" parent="ItemIcon.Style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ItemIcon.Style.Size32" parent="ItemIcon.Style">
        <item name="android:layout_width">@dimen/itemIcon32</item>
        <item name="android:layout_height">@dimen/itemIcon32</item>
    </style>

    <style name="ItemIcon.Style.Size24" parent="ItemIcon.Style">
        <item name="android:layout_width">@dimen/itemIcon24</item>
        <item name="android:layout_height">@dimen/itemIcon24</item>
    </style>

    <style name="Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Name.Style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Name.Style.12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Name.Style.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Name.Style.14.Clickable">
        <item name="android:textColor">@color/nameClickable</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PriceStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="LabelStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">8sp</item>
    </style>
    <style name="LabelStyle.LineUp" >
        <item name="android:background">@drawable/topwhiteline</item>
    </style>
</resources>