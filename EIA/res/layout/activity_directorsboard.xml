<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DirectorsBoardActivity" >

    <ImageView
        android:id="@+id/backgroundFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/blueshadebackground" />

    <RelativeLayout
        android:id="@+id/pilotDataBlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/genericFragmentBody"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/neocomMenuContainer"
            android:orientation="vertical" >

            <include
                android:id="@+id/progressLayout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                layout="@layout/actionbar_indeterminateprogress"
                android:padding="2dp"
                android:visibility="visible" />

            <ListView
                android:id="@+id/listContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:dividerHeight="1dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/neocomMenuHead"
            android:layout_width="40dip"
            android:layout_height="46dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/neoMenuIcon"
                style="@style/NeoComIconStyle"
                android:layout_width="@dimen/menuIconWidth"
                android:layout_height="@dimen/menuIconHeight"
                android:layout_centerInParent="true"
                android:src="@drawable/neomenu" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/neocomMenuHead"
            android:animateLayoutChanges="true"
            android:dividerHeight="2dp"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>