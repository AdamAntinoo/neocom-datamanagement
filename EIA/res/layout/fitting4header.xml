<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blacktraslucent40" >
    <ImageView
        android:id="@+id/itemIcon"
        style="@style/ItemIconStyle.Size96" />
    <LinearLayout
        android:id="@+id/fittingBlock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
         android:layout_toRightOf="@+id/itemIcon"
        android:orientation="vertical" >
        <org.dimensinfin.evedroid.core.DaysTextView
            android:id="@+id/fittingName"
            style="@style/NameStyle.Actionable"
            android:singleLine="false"
            android:text="OAC Delfos 1.0" />
        <TextView
            android:id="@+id/fittingHull"
            style="@style/NameStyle.White"
            android:text="Oracle [Attack Battlecruiser]" />
        <RelativeLayout
            android:id="@+id/fittingInformationBlock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/hullSlotsCount"
                style="@style/NumberStyle"
                android:layout_alignParentLeft="true"
                android:text="8 / 13 / 6" />

            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/fittingRuns"
                style="@style/NumberStyle"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="99" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/blueprintInformationLabelBlock"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/topwhiteline" >
            <TextView
                android:id="@+id/blueprintQtyLabel"
                style="@style/LabelStyle.Small"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="SLOTS" />
             <TextView
                android:id="@+id/blueprintMETELabel"
                style="@style/LabelStyle.Small"
                android:layout_width="50dp"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingLeft="2dp"
                android:text="PRICE" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/blueprintEconomicBlock"
            android:layout_width="fill_parent"
            android:layout_marginTop="15dip"
            android:layout_height="wrap_content" >
            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/stackRuns"
                style="@style/NumberStyle"
                android:layout_alignParentLeft="true"
                android:text="Runs:" />
            <org.dimensinfin.evedroid.core.DaysTextView
                android:id="@+id/jobs"
                style="@style/NumberStyle"
                android:layout_toLeftOf="@+id/meteBlock"
                android:gravity="right"
                android:text="1" />
            <LinearLayout
                android:id="@+id/meteBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:paddingLeft="2dp" >
                
                
            </LinearLayout>
            
            
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>